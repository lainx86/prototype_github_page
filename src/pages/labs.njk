---
layout: layouts/page.njk
title: Labs
description: Experimental projects and curiosity-driven work.
permalink: /labs/
---

<div class="space-y-8">
  <!-- EcoScan Demo Section -->
  <!-- EcoScan Demo Section -->
  <div class="mb-16">
    <!-- Distinct Card Container -->
    <div class="experience-card mb-16 relative overflow-hidden">
        <!-- Top Highlight Line -->
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-teal-500 to-blue-500 opacity-75"></div>
        
        <div class="p-2 md:p-4">
            <!-- Header -->
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-white mb-3 flex items-center justify-center gap-3">
                    <i data-lucide="scan-line" class="w-8 h-8 text-teal-400"></i>
                    EcoScan AI
                </h2>
                <p class="text-gray-400 text-sm max-w-lg mx-auto">
                    Advanced coral health assessment. Upload a coral image to detect bleaching signs using our computer vision model.
                </p>
            </div>

            <!-- Main Interaction Area -->
            <div class="max-w-2xl mx-auto">
                <!-- Input Interface (Default View) -->
                <div id="inputInterface" class="space-y-8 transition-all duration-300">
                    <div class="relative group">
                        <input type="file" id="coralImageInput" accept="image/*" class="hidden" />
                        <label for="coralImageInput" class="block w-full rounded-xl cursor-pointer relative overflow-hidden group" style="background: var(--bg-surface-hover); border: 2px dashed var(--border-subtle);">
                             <!-- Preview (Initially hidden, Absolute Overlay) -->
                            <div id="uploadPreview" class="absolute inset-0 z-10 hidden w-full h-full p-2" style="background: var(--bg-surface-hover);">
                                <!-- Image injected here -->
                            </div>

                            <!-- Empty State (Static Flow Content - Guarantees Height) -->
                            <div id="emptyState" class="flex flex-col items-center justify-center p-12 text-gray-500 transition-opacity duration-300">
                                <div class="w-16 h-16 rounded-full bg-gray-700 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                    <i data-lucide="image-plus" class="w-8 h-8 text-gray-400 group-hover:text-teal-400"></i>
                                </div>
                                <span class="text-base font-medium text-gray-300 mb-1">Click or drag image to upload</span>
                                <span class="text-xs text-gray-400">Supports JPG, PNG</span>
                            </div>
                        </label>
                    </div>

                    <button id="analyzeBtn" class="w-full py-4 px-6 bg-white hover:bg-gray-100 text-black font-bold rounded-xl transition-all transform active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2 shadow-lg shadow-white/5">
                        <span id="btnText">Run Analysis</span>
                        <i id="btnIcon" data-lucide="arrow-right" class="w-4 h-4"></i>
                    </button>
                    
                     <div id="errorMsg" class="hidden p-4 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 text-sm flex items-center justify-center gap-2">
                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                        <span id="errorText"></span>
                    </div>
                </div>

                <!-- Results Interface (Hidden by default) -->
                <div id="resultInterface" class="hidden text-center animate-fade-in-up">
                    <div class="bg-[#0f1012] border border-gray-800 rounded-xl p-8 shadow-inner">
                        <!-- Result Badge -->
                        <div class="flex justify-center mb-6">
                            <div id="resultBadge" class="inline-flex flex-col items-center justify-center px-8 py-3 rounded-2xl bg-gray-800 border border-gray-700">
                                <h3 id="labelResult" class="text-2xl font-bold text-white mb-0.5">--</h3>
                                <span id="confidenceValue" class="text-xs font-mono text-gray-400">Confidence: --%</span>
                            </div>
                        </div>

                        <!-- Image Representation -->
                        <div class="relative max-w-md mx-auto aspect-video rounded-lg overflow-hidden border border-gray-800 bg-black mb-6 group">
                            <img id="gradCamImage" class="w-full h-full object-contain" src="" alt="Grad-CAM Analysis" />
                            <div class="absolute inset-0 bg-black/60 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
                                <span class="text-xs font-mono text-white bg-black/80 px-3 py-1.5 rounded-full">GRAD-CAM FOCUS MAP</span>
                            </div>
                        </div>

                         <div class="text-center">
                            <button id="resetBtn" class="text-sm text-teal-400 hover:text-teal-300 font-medium inline-flex items-center gap-1 transition-colors">
                                <i data-lucide="refresh-ccw" class="w-3 h-3"></i>
                                Analyze another sample
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for lab in labs %}
      {% set statusColor = "pink" %}
      {% if lab.status == "prototype" %}
        {% set statusColor = "yellow" %}
      {% elif lab.status == "ongoing" %}
        {% set statusColor = "green" %}
      {% elif lab.status == "experiment" %}
        {% set statusColor = "blue" %}
      {% endif %}

    <div class="project-card relative overflow-hidden group flex flex-col h-full">
      <div class="flex justify-between items-start mb-4 gap-4">
        <h3 class="text-xl font-bold text-gray-200 group-hover:text-white transition-colors">
          {{ lab.title }}
        </h3>
        <span class="shrink-0 px-3 py-1 rounded-md text-xs font-semibold badge-{{ statusColor }} capitalize">
          {{ lab.status }}
        </span>
      </div>
      
      <p class="text-gray-400 text-sm leading-relaxed mb-6 flex-grow">
        {{ lab.description }}
      </p>

      {% if lab.date %}
      <div class="pt-4 border-t border-white/5 w-full flex justify-between items-center mt-auto">
        <div class="text-xs text-gray-500 font-mono flex items-center gap-2">
          <i data-lucide="calendar" class="w-3 h-3"></i>
          {{ lab.date }}
        </div>
        
        {% if lab.link %}
        <a href="{{ lab.link }}" target="_blank" class="flex items-center gap-1.5 text-xs font-medium text-gray-400 hover:text-{{ statusColor }}-400 transition-colors z-10">
          View Project
          <i data-lucide="arrow-up-right" class="w-3 h-3"></i>
        </a>
        {% endif %}
      </div>
      {% endif %}
      
      <!-- Hover Glow Effect -->
      <div class="absolute inset-0 bg-gradient-to-tr from-{{ statusColor }}-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
    </div>
    {% endfor %}
  </div>

  <!-- Back to Home -->
  <div class="text-center mt-12">
    <a href="/" class="inline-block px-8 py-3 bg-gradient-to-r from-purple-500 to-blue-500 rounded-full font-semibold hover:shadow-lg hover:shadow-purple-500/50 transition-all hover:scale-105">
      Back to Home
    </a>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const input = document.getElementById('coralImageInput');
        const uploadPreview = document.getElementById('uploadPreview');
        const emptyState = document.getElementById('emptyState');
        const btn = document.getElementById('analyzeBtn');
        const errorMsg = document.getElementById('errorMsg');
        const errorText = document.getElementById('errorText');
        
        const inputInterface = document.getElementById('inputInterface');
        const resultInterface = document.getElementById('resultInterface');
        
        const resultBadge = document.getElementById('resultBadge');
        const labelResult = document.getElementById('labelResult');
        const confidenceValue = document.getElementById('confidenceValue');
        const gradCamImage = document.getElementById('gradCamImage');
        const resetBtn = document.getElementById('resetBtn');

        const btnText = document.getElementById('btnText');
        const btnIcon = document.getElementById('btnIcon');

        // File Selection & Preview
        input.addEventListener('change', () => {
            if (input.files && input.files[0]) {
                const file = input.files[0];
                errorMsg.classList.add('hidden');
                
                // Show preview
                emptyState.classList.add('opacity-0');
                uploadPreview.classList.remove('hidden');
                
                const reader = new FileReader();
                reader.onload = (e) => {
                    uploadPreview.innerHTML = `
                       <img src="${e.target.result}" class="w-full h-full object-contain rounded-lg" />
                       <div class="absolute inset-x-0 bottom-4 text-center">
                            <span class="bg-black/70 text-white text-[10px] px-2 py-1 rounded-full backdrop-blur-md">
                                ${file.name}
                            </span>
                       </div>
                    `;
                };
                reader.readAsDataURL(file);
            }
        });

        // Reset
        resetBtn.addEventListener('click', () => {
            // Clear input
            input.value = '';
            
            // Reset Preview
            emptyState.classList.remove('opacity-0');
            uploadPreview.classList.add('hidden');
            uploadPreview.innerHTML = '';
            
            // Toggle Views
            resultInterface.classList.add('hidden');
            inputInterface.classList.remove('hidden');
            inputInterface.classList.remove('opacity-0');
            
            // Re-init icons
            if (window.lucide) window.lucide.createIcons();
        });

        btn.addEventListener('click', async () => {
            if (!input.files[0]) {
                showError("Please upload an image first.");
                return;
            }

            setLoading(true);
            hideError();

            const formData = new FormData();
            formData.append("file", input.files[0]);

            try {
                const response = await fetch("https://feby404-ecoscan.hf.space/api/predict", {
                    method: "POST",
                    body: formData
                });

                if (!response.ok) {
                    const errText = await response.text();
                    throw new Error(`API Error: ${response.status} - ${errText}`);
                }

                const data = await response.json();
                displayResults(data);

            } catch (err) {
                console.error("EcoScan Error:", err);
                showError("Connection failed. Service might be sleeping. Try again.");
            } finally {
                setLoading(false);
            }
        });

        function displayResults(data) {
            // Fade out input interface
            inputInterface.classList.add('opacity-0');
            
            setTimeout(() => {
                inputInterface.classList.add('hidden');
                resultInterface.classList.remove('hidden');
                
                // Data Population
                const isHealthy = data.label.toLowerCase() === "healthy";
                
                labelResult.textContent = data.label;
                labelResult.className = `text-2xl font-bold mb-0.5 ${isHealthy ? 'text-green-400' : 'text-red-400'}`;
                
                resultBadge.className = `inline-flex flex-col items-center justify-center px-8 py-3 rounded-2xl border ${isHealthy ? 'bg-green-500/10 border-green-500/20' : 'bg-red-500/10 border-red-500/20'}`;
                
                confidenceValue.textContent = `Confidence: ${(data.confidence * 100).toFixed(1)}%`;

                if (data.gradcam_image) {
                    gradCamImage.src = data.gradcam_image;
                }
                
                // Re-init icons
                if (window.lucide) window.lucide.createIcons();
            }, 300);
        }

        function setLoading(isLoading) {
            btn.disabled = isLoading;
            if (isLoading) {
                btnText.textContent = "Analyzing...";
                btnIcon.classList.add('animate-spin');
                btnIcon.setAttribute('data-lucide', 'loader-2');
            } else {
                btnText.textContent = "Run Analysis";
                btnIcon.classList.remove('animate-spin');
                btnIcon.setAttribute('data-lucide', 'arrow-right');
            }
            if (window.lucide) window.lucide.createIcons();
        }

        function showError(msg) {
            errorText.textContent = msg;
            errorMsg.classList.remove('hidden');
        }

        function hideError() {
            errorMsg.classList.add('hidden');
        }
    });
</script>
