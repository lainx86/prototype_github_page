---
layout: layouts/base.njk
title: Notes
---

<header class="py-8 text-center">
  <h1 class="text-3xl font-semibold text-emerald-900">Notes</h1>
  <p class="text-gray-600">All notes, devlogs, and diary entries. Use search and tags to filter.</p>
</header>

<section class="max-w-6xl mx-auto px-6">
  <section class="flex items-center gap-4 mb-6">
    <input id="notesSearch" type="search" placeholder="Search notes..." class="w-full md:w-1/2 rounded-full px-4 py-2 border border-gray-300 shadow-sm" />
    <div id="tagList" class="flex gap-2 flex-wrap">
      <button class="tag-btn" data-tag="all">all</button>
      {% set tags = collections.notes | map('data.tags') | flatten %}
      {% for t in tags %}
        <button class="tag-btn" data-tag="{{ t }}">{{ t }}</button>
      {% endfor %}
    </div>
  </section>

  <section id="notesGrid" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for note in collections.notes %}
      <article class="link-card p-6 rounded-2xl bg-white shadow-sm border border-emerald-100" data-title="{{ note.data.title | lower }}" data-tags="{{ note.data.tags | join(',') }}">
        <a href="{{ note.url }}">
          <h3 class="font-semibold text-lg mb-2 text-emerald-800">{{ note.data.title }}</h3>
          <p class="text-sm text-gray-600">{{ note.data.excerpt }}</p>
          <div class="mt-4 flex gap-2 text-xs text-gray-500">
            {% for tg in note.data.tags %}<span class="tag">{{ tg }}</span>{% endfor %}
          </div>
        </a>
      </article>
    {% else %}
      <p class="text-gray-600">No notes yet â€” buat file Markdown di <code>src/notes/</code>.</p>
    {% endfor %}
  </section>
</section>
