  <div id="notesPreview" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for note in collections.notes | slice(0,6) %}
      <article class="link-card block p-6 rounded-2xl bg-white shadow-sm hover:shadow-md border border-emerald-100 transition" data-title="{{ note.data.title | lower }}" data-tags="{{ note.data.tags | join(',') }}">
        <a href="{{ note.url }}">
          <h3 class="font-semibold text-lg mb-2 text-emerald-800">{{ note.data.title }}</h3>
          <p class="text-sm text-gray-600">{{ note.data.excerpt }}</p>
        </a>
      </article>
    {% else %}
      <p class="text-gray-600">No notes yet. Tambahkan file markdown di <code>src/notes/</code>.</p>
    {% endfor %}
  </div>
</section>

