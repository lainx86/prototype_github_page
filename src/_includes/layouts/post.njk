---
layout: layouts/base.njk
---

<article class="max-w-3xl mx-auto px-6 py-12 bg-white rounded-2xl shadow-sm">
  <a href="/notes/" class="text-emerald-700 hover:underline">← Back to notes</a>
  <h1 class="text-2xl font-semibold text-emerald-900 mt-4">{{ title }}</h1>
  <p class="text-sm text-gray-500 mt-1">{{ date | date("dd LLL yyyy") }}</p>
  <div class="mt-6 text-gray-700">
    {{ content | safe }}
  </div>
  <div class="mt-6">
    {% for tg in tags %}<span class="tag">{{ tg }}</span>{% endfor %}
  </div>
</article>
