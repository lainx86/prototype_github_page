---
layout: layouts/base.njk
---
{% include "partials/header.njk" %}

<div class="min-h-screen pt-32 pb-16">
  <div class="max-w-3xl mx-auto px-6">
    <!-- Back Link -->
    <a href="/journal" class="inline-flex items-center text-gray-400 hover:text-white transition-colors mb-12 group">
      <i data-lucide="arrow-left" class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform"></i>
      Back to Journal
    </a>

    <!-- Header -->
    <header class="mb-16">
      <div class="flex items-center gap-4 text-sm text-gray-400 mb-6">
        <time datetime="{{ page.date | dateIso }}">{{ page.date | dateReadable }}</time>
        {% if tags %}
        <span class="w-1 h-1 bg-gray-600 rounded-full"></span>
        <div class="flex gap-2">
          {% for tag in tags %}
            {% if tag != "journal" %}
            <span class="text-purple-400">#{{ tag }}</span>
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
      </div>
      <h1 class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white via-gray-200 to-gray-400 mb-6">
        {{ title }}
      </h1>
      {% if excerpt %}
      <p class="text-xl text-gray-400 leading-relaxed font-light">
        {{ excerpt }}
      </p>
      {% endif %}
    </header>

    <!-- Content -->
    <article class="prose prose-invert prose-lg max-w-none prose-headings:text-white prose-p:text-gray-300 prose-a:text-purple-400 hover:prose-a:text-purple-300 prose-strong:text-white prose-code:text-purple-300 prose-pre:bg-gray-900/50 prose-pre:border prose-pre:border-white/10">
      {{ content | safe }}
    </article>

    <!-- Footer -->
    <hr class="border-white/10 my-16">
    <div class="flex justify-between items-center">
      <a href="/journal" class="text-gray-400 hover:text-white transition-colors">
        All Entries
      </a>
      <div class="flex gap-4">
        <!-- Share buttons could go here if requested, keeping it minimal for now -->
      </div>
    </div>
  </div>
</div>
