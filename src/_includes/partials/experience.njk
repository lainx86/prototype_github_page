<section id="experience" class="relative py-32 px-6">
  <div class="max-w-4xl mx-auto fade-in-section">
    <h2 class="text-4xl md:text-5xl font-bold mb-12 bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent">
      Experience
    </h2>
    <div class="space-y-6">
      {% for exp in experience %}
      <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-purple-500/50 transition-all experience-card">
        <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4 gap-2">
          <div>
            <h3 class="text-2xl font-bold text-purple-400">{{ exp.role }}</h3>
            <p class="text-xl text-gray-300">{{ exp.company }}</p>
          </div>
          <span class="text-gray-500 text-sm md:text-base">{{ exp.period }}</span>
        </div>
        <p class="text-gray-400">{{ exp.description }}</p>
        {% if exp.type %}
        <div class="mt-4">
          <span class="px-3 py-1 bg-blue-500/20 rounded-full text-xs text-blue-300">
            {{ exp.type }}
          </span>
        </div>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>